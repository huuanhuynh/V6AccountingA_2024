@using V6Soft.Web.Accounting.HtmlExtensions;
@using BundleNames = V6Soft.Web.Accounting.Constants.Names.Bundles;

@Scripts.Render(BundleNames.Scripts.Lib)
<script type="text/javascript">
        // Functions in V6Server namespace are generated by server-side code.
        var V6Server = window.V6Server = {};

        // Resolves URL in server-side format (eg: ~/Home), to
        // application-specific relative path (eg: /accounting/Home)
        // #param `serverUrl` [string] server-side formated URL
        // #return [string] or [null] if input is null or empty.
        V6Server.resolveUrl = function (serverUrl) {
            var relativeRoot = '@Url.Content("~/")'
                rootPrefix = '~/';
            if (!serverUrl) { return null; }

            if (serverUrl.indexOf(rootPrefix) == 0) {
                return relativeRoot + serverUrl.substring(2);
            }
        };

</script>
@Html.PrintJavascriptConstants();
@Scripts.Render(BundleNames.Scripts.App)
