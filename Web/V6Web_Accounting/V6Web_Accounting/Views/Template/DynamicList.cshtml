@using FieldIndex = V6Soft.Models.Core.Constants.DefinitionIndex.Field;

@model V6Soft.Models.Core.PagedList<V6Soft.Models.Accounting.CustomerGroup>

@{
    ViewBag.Title = "Customer Groups";
}

<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-info alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            We're using <a class="alert-link" href="http://tablesorter.com/docs/">Tablesorter 2.0</a> for the sort function on the tables. Read the documentation for more customization options or feel free to use something else!
        </div>
    </div>
</div><!-- /.row -->


<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped tablesorter">
                <thead>
                    <tr>
                        <th ng-repeat="header in headers">{{header.localizedLabel}} 
                            <i ng-if="header.isSortable" class="fa fa-sort"></i>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="groups != null"><td colspan="4">No Customer Group</td></tr>
                    <tr ng-repeat="group in groups">
                        <td ng-repeat="header in headers">{{group[header.label]}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div><!-- /.col-lg-12 -->
</div><!-- /.row -->