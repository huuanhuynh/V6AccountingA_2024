@using FieldIndex = V6Soft.Models.Core.Constants.DefinitionIndex.Field;

@model V6Soft.Models.Core.PagedList<V6Soft.Models.Core.V6Model>

<aside id="page-settings" data-title="@ViewBag.Title"></aside>

<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-info alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            We're using <a class="alert-link" href="http://tablesorter.com/docs/">Tablesorter 2.0</a> for the sort function on the tables. Read the documentation for more customization options or feel free to use something else!
        </div>
    </div>
</div><!-- /.row -->

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped tablesorter">
                <thead>
                    <tr>
                        <th>UID <i class="fa fa-sort"></i></th>
                        <th>Code <i class="fa fa-sort"></i></th>
                        <th>Name <i class="fa fa-sort"></i></th>
                        <th>Status <i class="fa fa-sort"></i></th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || Model.Items == null)
                    {
                        <tr><td colspan="4">No data to display</td></tr>
                    }
                    else
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.UID</td>
                                <td>@item.GetField(FieldIndex.Code)</td>
                                <td>@item.GetField(FieldIndex.Name)</td>
                                <td>@item.GetField(FieldIndex.Status)</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div><!-- /.col-lg-12 -->
</div><!-- /.row -->
@section scripts {
}